{% extends "main.twig" %}

{% block main %}
<section class="section">
    <div class="container">
        <div class="column is-one-third is-offset-one-third">
            <h2 class="title is-size-3 has-text-centered">
                Comment Section
            </h2>
            <div class="box">
                <form action="contact.php" method="post">
                    <div class="field">
                        <div class="control">
                            <input type="email" class="input" name="email" placeholder="Enter E-Mail Address">
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <input type="text" class="input" name="name" placeholder="Enter Your Name">
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <input type="text" class="input" name="message" placeholder="Enter Comment">
                        </div>
                    </div>
                    <div class="field is-expanded">
                        <input type="submit" class="button is-primary is-fullwidth">
                    </div>
                </form>
            </div>
            {% if error is not empty %}
            <article class="message is-danger">
                <div class="message-body has-text-centered">
                    <p>
                        {{ error }}
                    </p>
                </div>
            </article>
            {% elseif message is not empty %}
            <article class="message is-success">
                <div class="message-body has-text-centered">
                    <p>{{ message }}</p>
                </div>
            </article>
            {% endif %}
        </div>
    </div>
</section>
{% endblock main %}